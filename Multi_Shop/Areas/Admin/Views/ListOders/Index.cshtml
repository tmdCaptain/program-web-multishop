@using Multi_Shop.Models
@{
    ViewBag.Title = "Index";
}

<div class="breadcome-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="icon nalika-home"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Danh sách đơn hàng</h2>
                                    <p> Tất cả đơn hàng</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <div class="breadcomb-report">
                                <button data-toggle="tooltip" data-placement="left" title="Download Report" class="btn"><i class="icon nalika-download"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
       
<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Đơn hàng</h4>
                    <div class="add-product">
                        <a href="product-edit.html">Thêm đơn hàng</a>
                    </div>
                    <table>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Ngày giao</th>
                            <th>Địa chỉ</th>
                            <th>Thành tiền</th>
                            <th>Nhóm lệnh</th>
                        </tr>

                        @foreach (DonHang i in Common.getOders())
                        {
                            <tr>
                                @foreach (CtDonHang j in Common.getListOders())
                                {
                                    <td>@i.soDH</td>
                                    <td>@i.ngayGH</td>
                                    <td>@i.diaChiGH</td>
                                    <td>@j.giaBan</td>
                                    <td>
                                        <button class="btn btn-danger">Hủy đơn</button>
                                        <button class="btn btn-default">Chi tiết</button>
                                        <button class="btn btn-success">Kích hoạt</button>
                                    </td>
                                 }
                            </tr>
                        }
                        
                    </table>
                    <div class="custom-pagination">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
