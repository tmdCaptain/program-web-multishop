@using Multi_Shop.Models
@model Multi_Shop.Models.LoaiSP

@{
    ViewBag.Title = "Index";
    List<LoaiSP> l = ViewData["listProducts"] as List<LoaiSP>;

}


<div class="header-advance-area">
    <!-- Mobile Menu start -->
    <!-- Mobile Menu end -->
    <div class="breadcome-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcome-list">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <div class="breadcomb-wp">
                                    <div class="breadcomb-icon">
                                        <i class="icon nalika-home"></i>
                                    </div>
                                    <div class="breadcomb-ctn">
                                        <h2>Các loại sản phẩm</h2>
                                        <p> <span class="bread-ntd">Danh sách loại sản phẩm </span></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <div class="breadcomb-report">
                                    <button data-toggle="tooltip" data-placement="left" title="Download Report" class="btn"><i class="icon nalika-download"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="product-status mg-b-30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="product-status-wrap">
                            <h4>Các loại sản phẩm</h4>
                            <div class="add-product">
                                <a href='@Url.Action("Index" , "InforProduct")'>Xem thêm thông tin sản phẩm</a>
                            </div>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Mã loại</th>
                                        <th>Loại sản phẩm</th>
                                        <th>Số lượng</th>
                                        <th>Chỉnh sửa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (LoaiSP i in l)
                                    {


                                        <tr>
                                            <td>@i.maLoai</td>
                                            <td>@i.tenLoai</td>
                                            <td>@i.SanPhams.Where(x => x.maLoai == i.maLoai).Count() Sản Phẩm</td>
                                            <td>
                                                @using (Html.BeginForm("Delete", "TypeProduct", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="maLoai" value="@i.maLoai" />
                                                    <button data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                                }

                                                @using (Html.BeginForm("Insert", "TypeProduct", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="maLoaiS" value="@i.maLoai" />
                                                    <button data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                                                }
                                            </td>
                                        </tr>

                                    }
                                </tbody>

                            </table>
                            <div class="custom-pagination">
                                <ul class="pagination">
                                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="col-md-6">
        @using (Html.BeginForm("Index", "TypeProduct", FormMethod.Post)){
        <div class="review-content-section">
            <div class="input-group mg-b-pro-edt form-group">
                <span class="input-group-addon"><i class="icon nalika-user" aria-hidden="true"></i></span>
                @Html.TextBoxFor(m => m.tenLoai , new {@class="form-control", @placeholder = "Tên nhóm sản phẩm"})
            </div>
            <div class="coment-area form-group" >
                <div class="input-group mg-b-pro-edt">
                    @Html.TextAreaFor(m => m.ghiChu, new {@rows="11" , @placeholder="Tóm tắt nội dung" ,
                                        @size="100",@cols="30"})
                    
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Thêm loại  mới</button>
            </div>
            
            <select name="select" class="form-control pro-edt-select form-control-primary">
                <option value="opt1">Số lượng</option>
                <option value="opt2">1</option>
                <option value="opt2">2</option>
                <option value="opt3">3</option>
                <option value="opt4">4</option>
                <option value="opt5">5</option>
                <option value="opt6">6</option>
            </select>
        </div>
        @Html.HiddenFor(b => b.maLoai )

        }
    </div>
</div>

<style>
    form{
        display:inline;
    }
</style>



